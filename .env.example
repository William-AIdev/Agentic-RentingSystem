# App
APP_TITLE="Rental Agent"
APP_HOST="0.0.0.0"
APP_PORT=7860
LOG_LEVEL="INFO"

# LLM
OPENAI_API_KEY="your_openai_api_key"
OPENAI_MODEL="gpt-5-nano"
OPENAI_TEMPERATURE=0

# Postgres (used by app + docker-compose)
POSTGRES_HOST="db"
POSTGRES_PORT=5432
POSTGRES_USER="rental"
POSTGRES_PASSWORD="rental_pwd"
POSTGRES_DB="rental_db"
DB_POOL_SIZE=5

# Vector store (Qdrant)
QDRANT_URL="http://qdrant:6333"
QDRANT_COLLECTION="rental_rules"
RAG_RECREATE=false
RAG_TOP_K=3

# Embeddings
EMBEDDING_MODEL="BAAI/bge-m3"
EMBEDDING_DEVICE="cpu"
EMBEDDING_NORMALIZE=true

# Rules path
RULES_PATH="agent/rules/rental_rules.md"
